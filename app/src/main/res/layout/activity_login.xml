<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login"
    style="@style/AppTheme.NoMargin"
    >

    <LinearLayout
        style="@style/AppTheme.NoMargin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/textView4"
            style="@style/AppTheme.tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login" />

        <TextView
            android:id="@+id/textView2"
            style="@style/AppTheme.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/labelEmail" />

        <EditText
            android:id="@+id/inputUsuario"
            style="@style/AppTheme.Input.Email"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/hint_correo"
            android:autofillHints="" />

        <TextView
            android:id="@+id/textView3"
            style="@style/AppTheme.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/labelPass" />

        <EditText
            android:id="@+id/editTextPass"
            style="@style/AppTheme.Input.Pass"
            android:ems="10"
            android:hint="@string/hint_pass"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/buttonIngresar"
            style="@style/AppTheme.Input.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ingresar" />

            <Button
            android:id="@+id/buttonRegister"
            style="@style/AppTheme.Input.Button.Down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/regiterLink" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>