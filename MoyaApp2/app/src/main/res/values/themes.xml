<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoyaApp2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

        <!-- Base application theme. -->
        <style name="AppBaseTheme" parent="Theme.MoyaApp2">
            <item name="android:background">@color/white</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:gravity">center</item>
            <item name="android:layout_margin">20dp</item>
        </style>

        <style name="AppTheme.tittle" parent="AppBaseTheme">
            <item name="android:textSize">30sp</item>
            <item name="android:fontFamily">@font/silkscreen_bold</item>
        </style>

        <style name="AppTheme.NoMargin" parent="AppBaseTheme">
            <item name="android:layout_margin">0dp</item>
        </style>

        <style name="AppTheme.Label" parent="AppBaseTheme">
            <item name="android:textSize">20sp</item>
            <item name="android:fontFamily">@font/silkscreen_regular</item>
        </style>

        <style name="AppTheme.Label.RadioButtonGroup" parent="AppTheme.Label">
            <item name="android:gravity">center</item>
            <item name="android:layout_margin">0dp</item>
        </style>

        <style name="AppTheme.Input" parent="AppBaseTheme">
            <item name="android:textSize">10sp</item>
            <item name="android:drawablePadding">10dp</item>
            <item name="android:paddingLeft">15dp</item>
            <item name="android:gravity">center_vertical</item>
            <item name="android:layout_width">280dp</item>
            <item name="android:layout_height">48dp</item>
            <item name="android:background">@drawable/border_input</item>
            <item name="android:fontFamily">@font/pressstart2p_regular</item>
            <item name="android:textCursorDrawable">@null</item>
            <item name="android:cursorVisible">true</item>
        </style>

        <style name="AppTheme.Input.Email" parent="AppTheme.Input">
            <item name="android:paddingLeft">10dp</item>
            <item name="android:drawableStart">@drawable/ic_email</item>
            <item name="android:description">@string/hint_AR</item>
        </style>

        <style name="AppTheme.Input.Pass" parent="AppTheme.Input">
            <item name="android:paddingLeft">10dp</item>
            <item name="android:drawableStart">@drawable/ic_lock</item>
            <item name="android:textSize">13sp</item>
        </style>

        <style name="AppTheme.Input.RadioButton" parent="AppTheme.Input">
            <item name="android:layout_width">120dp</item>
            <item name="android:background">@color/white</item>
            <item name="android:radioButtonStyle">@color/black</item>
        </style>

        <style name="AppTheme.Input.Button" parent="AppTheme.Input">
            <item name="android:width">180dp</item>
            <item name="android:background">@drawable/send_button</item>
            <item name="android:fontFamily">@font/silkscreen_regular</item>
            <item name="android:gravity">center</item>
            <item name="android:textSize">15sp</item>
        </style>

        <style name="AppTheme.Input.Switch" parent="AppTheme.Input">
            <item name="android:layout_width">150dp</item>
            <item name="android:gravity">center</item>
            <item name="android:background">@color/white</item>
        </style>

        <style name="AppTheme.Input.Button.Down" parent="AppTheme.Input.Button">
            <item name="android:width">350dp</item>
            <item name="android:background">@drawable/register_login</item>
        </style>
</resources>